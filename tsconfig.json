{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020", 
    "lib": ["ES2020", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx", 
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "paths": {
      "interfaces/*": ["src/interfaces/*"],
      "pages": ["src/pages/*"],
      "components/*": ["src/components/*"],
      "enums/*": ["src/enums/*"],
      "constants": ["src/constants/*"],
      "layouts": ["src/layouts/*"],
      "services/*": ["src/services/*"],
      "hooks/*": ["src/hooks/*"],
      "stores/*": ["src/stores/*"],
      "helpers/*": ["src/helpers/*"]
    }
  }
}
